@model List<Contact>
@{
    ViewData["Title"] = "My Contacts";
}


<a asp-controller="Contact" asp-action="Add">Add Contact</a>

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Contact contact in Model)
        {
        <tr>
            <td><a asp-controller="Contact" asp-action="Details" asp-route-id="@contact.ContactId" asp-route-slug="@contact.Slug">@contact.FirstName</a></td>
            <td><a asp-controller="Contact" asp-action="Details" asp-route-id="@contact.ContactId" asp-route-slug="@contact.Slug">@contact.LastName</a></td>
            <td>@contact.Phone</td>
            <td>@contact.Email
            <td>@contact.Category.Name</td>
        </tr>
        }
    </tbody>
</table>
