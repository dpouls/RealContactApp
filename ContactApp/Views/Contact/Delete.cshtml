@model Contact
@{
    ViewData["Title"] = "Delete Contact";
}

<h2>Confirm Deletion</h2>
<h3>Do you really want to delete <span class="font-weight-bold">@Model.FirstName @Model.LastName</span>?</h3>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ContactId" />
    <button type="submit" class="btn btn-dark">Yes</button>
    <a asp-controller="Contact" asp-action="Details" asp-route-id="@Model.ContactId" asp-route-slug="@Model.Slug" class="btn btn-dark">No</a>
</form>